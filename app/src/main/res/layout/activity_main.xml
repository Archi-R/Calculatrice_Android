<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boutonPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="32dp"
        android:onClick="SendPoint"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/Nombre8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/Nombre5"
        app:layout_constraintStart_toEndOf="@+id/Nombre7"
        android:onClick="Send8"
        />

    <Button
        android:id="@+id/Nombre7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/Nombre4"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Send7"
        />

    <Button
        android:id="@+id/AddAndSubstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:onClick="AddSubstract"
        android:text="+/-"
        app:layout_constraintBottom_toTopOf="@+id/Divide"
        app:layout_constraintStart_toEndOf="@+id/Nombre9"
        />

    <Button
        android:id="@+id/Divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:onClick="Divide"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/Multiply"
        app:layout_constraintStart_toEndOf="@+id/Nombre6" />

    <Button
        android:id="@+id/Multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:onClick="Multiply"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/Clear"
        app:layout_constraintStart_toEndOf="@+id/Nombre3" />

    <Button
        android:id="@+id/Nombre6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:onClick="Send6"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/Nombre3"
        app:layout_constraintStart_toEndOf="@+id/Nombre5" />

    <Button
        android:id="@+id/Nombre5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/Nombre2"
        app:layout_constraintStart_toEndOf="@+id/Nombre4"
        android:onClick="Send5"
        />

    <Button
        android:id="@+id/Nombre4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/Nombre1"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Send4"
        />

    <Button
        android:id="@+id/Nombre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:onClick="Send1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/boutonPoint"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Nombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/Nombre0"
        app:layout_constraintStart_toEndOf="@+id/Nombre1"
        android:onClick="Send2"
        />

    <Button
        android:id="@+id/Nombre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:onClick="Send3"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/Calculer"
        app:layout_constraintStart_toEndOf="@+id/Nombre2" />

    <Button
        android:id="@+id/Calculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="32dp"
        android:onClick="Egal"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Nombre0" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="32dp"
        android:onClick="Clear"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Calculer" />

    <Button
        android:id="@+id/Nombre0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="32dp"
        android:onClick="Send0"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boutonPoint" />

    <Button
        android:id="@+id/Nombre9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"

        android:onClick="Send9"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/Nombre6"
        app:layout_constraintStart_toEndOf="@+id/Nombre8" />

    <TextView
        android:id="@+id/Output"
        android:layout_width="368dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="46dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PremierChiffre" />

    <TextView
        android:id="@+id/PremierChiffre"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="41dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>